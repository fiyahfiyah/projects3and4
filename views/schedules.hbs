    {{!--  --}}
    <div class="container">
        <br>
        <h2 class="h2">Add another schedule</h2>
        <br>
        <form method="POST" action="/schedules">
            <div class="form-group">
                <label for="newday">Day</label>
                <select name='day' class="form-control form-control-sm">
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                    <option value="7">Sunday</option>
                </select>
            </div>
            <div class="form-group">
                <label for="newstarttime">Start</label>
                <input name='timestart' type="time" id="newstarttime">
            </div>
            <div class="form-group">
                <label for="newstarttime">End</label>
                <input name='timeend' type="time" id="newstarttime">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>

